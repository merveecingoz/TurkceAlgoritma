public class monkeySort {

  public static void sirala(int[] dizi) {
    while (!siralanmisMi(dizi)) {
      karistir(dizi);
    }
  }

  private static boolean siralanmisMi(int[] dizi) {
    for (int i = 0; i < dizi.length - 1; i++) {
      if (dizi[i] > dizi[i + 1]) {
        return false;
      }
    }
    return true;
  }

  private static void karistir(int[] dizi) {
    for (int i = 0; i < dizi.length; i++) {
      int rastgeleIndeks = (int) (Math.random() * dizi.length);
      degistir(dizi, i, rastgeleIndeks);
    }
  }

  private static void degistir(int[] dizi, int i, int j) {
    int gecici = dizi[i];
    dizi[i] = dizi[j];
    dizi[j] = gecici;
  }

  public static void main(String[] args) {
    int[] sayilar = {5, 1, 4, 2, 8};
    System.out.println("Sıralanmamış dizi: " + java.util.Arrays.toString(sayilar));
    sirala(sayilar);
    System.out.println("Sıralanmış dizi: " + java.util.Arrays.toString(sayilar));
  }
}
